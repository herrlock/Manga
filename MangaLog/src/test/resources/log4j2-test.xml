<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="de.herrlock.manga.ui.log,de.herrlock.log4j2.filter" status="INFO">
	<Properties>
		<Property name="patternLayout">%d{HH:mm:ss.SSS} [%t] %-5level %logger{1.}.%M - %m%n</Property>
		<Property name="consoleLayout">%-5level %logger{1.}.%M - %m%n</Property>
	</Properties>
	<Appenders>
		<Console name="ConsoleLogger" target="SYSTEM_OUT">
			<PatternLayout pattern="${consoleLayout}" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="org.apache.http" level="INFO" additivity="false">
			<AppenderRef ref="ConsoleAppender" />
		</Logger>
		<Root level="DEBUG">
			<AppenderRef ref="ConsoleLogger" />
		</Root>
	</Loggers>

</Configuration>